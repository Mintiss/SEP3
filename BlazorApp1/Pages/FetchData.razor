@page "/fetchdata"

@using BlazorApp1.Data
@inject ItemService Service
 
<h1>Items</h1>

<p>The Items are in the code, not in the DB</p>

@if (items == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Title</th>
                <th>Type</th>
                <th>Author</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.Title</td>
                    <td>@item.Type</td>
                    <td>@item.Author</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    Item[] items;

    protected override async Task OnInitializedAsync()
    {
        items = await Service.GetItemAsync(DateTime.Now);
    }
}
